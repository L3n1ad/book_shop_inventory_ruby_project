<h1>This is books edit page</h1>

<form class="" action="/books/<%= @book.id %>" method="post">
  <label for="">Book Title</label>
  <input type="text" value="<%= @book.title %> " name="title">

  <label for="">Book genre</label>
  <input type="text" value="<%= @book.genre %> " name="genre">

  <label for="">Book description</label>
  <input type="text" value="<%= @book.description %> " name="description">

  <label for="">year</label>
  <input type="number" value="<%= @book.year.to_i %>" name="year">

  <input type="submit" name="" value="Update Book">
</form>
