<h1>This is the authors index page</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Books</th>
  </tr>
  <% for author in @authors %>
    <% books = author.books %>
    <tr>
      <th><a href="/authors/<%= author.id %>"><%= author.pretty_name %></a></th>
      <th class='books_authors'>
        <% for book in books %>
          <span><%= book.title %></span>
        <% end %>
      </th>
    </tr>
  <% end %>
</table>

<a href="/authors/new">Create new author</a>
